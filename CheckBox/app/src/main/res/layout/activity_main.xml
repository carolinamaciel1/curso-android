<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="checkbox.thcborges.com.br.checkbox.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:text="@string/TÃ­tulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <CheckBox
        android:text="@string/cao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:id="@+id/checkBoxCaoId"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checlBoxGatoId"
        tools:text="Gato"
        android:layout_below="@+id/checkBoxCaoId"
        android:layout_alignLeft="@+id/checkBoxCaoId"
        android:layout_alignStart="@+id/checkBoxCaoId" />

    <CheckBox
        android:text="@string/papagaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checlBoxGatoId"
        android:layout_alignLeft="@+id/checlBoxGatoId"
        android:layout_alignStart="@+id/checlBoxGatoId"
        android:id="@+id/checkBoxPapagaioId"
        tools:text="Papagaio" />

    <Button
        android:text="@string/botao_mostar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/botaoMostrarId" />

    <TextView
        android:text="@string/exibir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/textoExibicaoId"
        android:textSize="18sp"
        android:layout_below="@+id/botaoMostrarId"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
